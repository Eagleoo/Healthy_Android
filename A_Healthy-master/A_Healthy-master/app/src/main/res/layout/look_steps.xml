<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/look_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步数"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行走距离(Km)"
            android:textSize="15sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消耗卡路里(Ka)"
            android:textSize="15sp"
            android:layout_weight="1"/>


    </LinearLayout>

    <ListView
        android:id="@+id/steps_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_toWeb"
        android:layout_below="@+id/look_linear"
        android:layout_margin="10dp">
    </ListView>

    <Button
        android:background="@drawable/btn_shap"
        android:textSize="17sp"
        android:textColor="#fff"
        android:id="@+id/btn_toWeb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="将步数同步到云端"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
