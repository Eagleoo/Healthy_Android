<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/plan_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <ImageView
            android:id="@+id/back1"
            android:background="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康计划"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/back"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <ListView
        android:id="@+id/lt"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#00DB00"
        android:layout_below="@id/plan_l">

    </ListView>

    <ListView
        android:id="@+id/list_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="15dp"
        android:divider="@android:color/transparent"
        android:layout_above="@+id/btn_add_plan"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none"
        android:layout_below="@+id/lt"
        android:layoutAnimation="@anim/anim_listview_item">

    </ListView>

    <Button
        android:background="@drawable/shape_button"
        android:id="@+id/btn_add_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+   添加新计划"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>

</RelativeLayout>
